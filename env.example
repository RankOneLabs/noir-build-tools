# Noir Build Tools - Environment Variables
# Copy to .env and customize as needed

# ============================================
# Blockchain / Deployment
# ============================================
# RPC URL for chain interaction (default: http://127.0.0.1:8545)
RPC_URL=http://127.0.0.1:8545

# Private key for deploying contracts (no default - required for non-local chains)
# For local anvil testing, the default key is used automatically
PRIVATE_KEY=

# Chain ID (optional; auto-detected from RPC if not set)
CHAIN_ID=
CHAINID=

# ============================================
# Forge / Solidity Compilation
# ============================================
# Optimizer runs (default: 200)
OPTIMIZER_RUNS=200

# Enable optimizer (default: true)
ENABLE_OPTIMIZER=true

# Use legacy transaction format (default: false)
USE_LEGACY=false

# Additional forge flags
FORGE_FLAGS=

# ============================================
# Paths
# ============================================
# Override lib directory location (auto-detected by default)
NOIR_BUILD_TOOLS_LIB=

# Output directory for verifier contracts
OUTPUT_DIR=

# ============================================
# Benchmarking
# ============================================
# Number of benchmark runs (default: 5)
NUM_RUNS=5

# ============================================
# Testing / Debug
# ============================================
# Dry run mode - show commands without executing
DRY_RUN=false
